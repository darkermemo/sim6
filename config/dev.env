# SIEM Development Environment Configuration
# This file contains development-specific settings
# Copy to .env in project root for local development

# ===== Core System Configuration =====
PROJECT_ROOT=/Users/yasseralmohammed/sim6
LOGS_DIR=${PROJECT_ROOT}/logs
ENVIRONMENT=development

# ===== Database Configuration =====
# ClickHouse (Primary event storage)
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=dev
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_TCP_URL=tcp://localhost:9000/dev

# PostgreSQL (Metadata storage)
DATABASE_URL=postgres://username:password@localhost:5432/siem_meta
POSTGRES_DB=siem_meta
POSTGRES_USER=username
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis (Caching and session storage)
REDIS_URL=redis://localhost:6379
REDIS_NAMESPACE=siem_dev

# ===== Service Configuration =====
# Main API Server
API_URL=http://localhost:8080
API_PORT=8080
API_HOST=0.0.0.0

# ClickHouse Ingestion Service
SIEM__SERVER__BIND_ADDRESS=0.0.0.0:8081
SIEM__INGESTOR__PORT=8081
SIEM__PIPELINE__PORT=8082
INGESTOR_URL=http://localhost:8081
INGESTOR_PORT=8081
INGESTOR_HOST=0.0.0.0

# Unified Pipeline Service
PIPELINE_URL=http://localhost:8082
PIPELINE_PORT=8082
PIPELINE_HOST=0.0.0.0

# UI Development Server
UI_PORT=3004
VITE_PORT=3004
VITE_API_URL=http://localhost:8080

# ===== Message Queue Configuration =====
# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC=siem-events
KAFKA_GROUP_ID=siem-consumer-group

# ===== Authentication & Security =====
# JWT Configuration (Development - NOT for production!)
JWT_SECRET=dev-jwt-secret-key-change-in-production-12345678901234567890
JWT_EXPIRATION_HOURS=24
JWT_ISSUER=siem-auth-dev
JWT_AUDIENCE=siem-search-dev

# Admin Token (Development - NOT for production!)
ADMIN_TOKEN=dev-admin-token-12345-change-in-production
ADMIN_TOKEN_DURATION_HOURS=24

# Agent API Key (Development - NOT for production!)
AGENT_API_KEY=dev-agent-key-12345-change-in-production

# ===== Performance Configuration =====
# Batch processing
BATCH_SIZE=1000
BATCH_TIMEOUT_MS=5000
MAX_CONCURRENT_REQUESTS=100

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# ===== Logging Configuration =====
LOG_LEVEL=info
LOG_FORMAT=pretty
RUST_LOG=info,siem_api=debug,siem_consumer=debug

# ===== Development Flags =====
DEV_MODE=true
DEBUG_MODE=false
ENABLE_METRICS=true
ENABLE_TRACING=true

# ===== External Services =====
# Threat Intelligence
THREAT_INTEL_ENABLED=false
THREAT_INTEL_API_KEY=

# Email notifications (disabled in dev)
SMTP_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Slack notifications (disabled in dev)
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=