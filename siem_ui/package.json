{
  "name": "siem-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node -e \"if(!process.env.REACT_DEV){console.log('React UI disabled');process.exit(0)}\" && vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "preview": "vite preview",
    "generate-api": "node scripts/generate-api-client.cjs",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "gen:pw-tests": "ts-node ./scripts/gen_pw_tests.ts",
    "test:e2e": "npm run gen:pw-tests && playwright test --config=playwright.config.ts",
    "test:e2e:ui": "playwright test --ui",
    "qa": "./scripts/run-qa-suite.sh",
    "qa:quick": "npm run lint && npm run test -- --run && npm run build",
    "qa:demo": "./scripts/demo-qa-features.sh",
    "error-detection": "./scripts/run-error-detection.sh",
    "lint:runtime-errors": "eslint . --ext ts,tsx --config .eslintrc.runtime-errors.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@monaco-editor/react": "^4.7.0",
    "@openapitools/openapi-generator-cli": "^2.21.4",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-table": "^8.10.7",
    "@types/crypto-js": "^4.2.2",
    "@types/react-window": "^1.8.8",
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.294.0",
    "openapi-typescript": "^7.8.0",
    "react": "^18.2.0",
    "react-day-picker": "^8.9.1",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.7.1",
    "react-window": "^1.8.11",
    "recharts": "^2.8.0",
    "sonner": "^2.0.6",
    "swr": "^2.2.4",
    "tailwind-merge": "^2.0.0",
    "uuid": "^11.1.0",
    "zod": "^4.0.10",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.1.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.6.1",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "identity-obj-proxy": "^3.0.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^23.2.0",
    "json-schema-generator": "^2.0.6",
    "msw": "^2.10.4",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^4.5.0",
    "vite-plugin-checker": "^0.10.1",
    "vitest": "^1.6.1"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
