# SIEM System Environment Configuration
# This file contains environment variables for all SIEM services
# Edit these values according to your deployment requirements

# ===== Database Configuration =====
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=siem_production
DATABASE_URL=http://localhost:8123

# ===== Kafka Configuration =====
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_EVENTS=siem_events
KAFKA_CONSUMER_GROUP=siem_consumer_group

# ===== API Configuration =====
SIEM_API_PORT=3000
SERVER_ADDR=0.0.0.0:3000
API_URL=http://localhost:3000/api/v1

# ===== UI Configuration =====
UI_PORT=3004
VITE_PORT=3004
VITE_API_URL=http://localhost:3000/api/v1

# ===== Security Configuration =====
JWT_SECRET=your-production-jwt-secret-change-this
JWT_EXPIRATION=24h
API_KEY=your-production-api-key-change-this

# ===== Logging Configuration =====
RUST_LOG=info
RUST_BACKTRACE=1
LOG_LEVEL=info
LOG_DIR=/var/log/siem

# ===== Service Configuration =====
SIEM_DATA_DIR=/var/lib/siem
SIEM_CONFIG_DIR=/etc/siem
SIEM_USER=siem
SIEM_GROUP=siem

# ===== Performance Configuration =====
WORKER_THREADS=4
MAX_CONNECTIONS=1000
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=60

# ===== Schema Validator Configuration =====
SCHEMA_VALIDATION_ENABLED=true
SCHEMA_CACHE_SIZE=1000
SCHEMA_CACHE_TTL=3600

# ===== Consumer Configuration =====
CONSUMER_BATCH_SIZE=1000
CONSUMER_BATCH_TIMEOUT=5000
CONSUMER_MAX_RETRIES=3
CONSUMER_RETRY_DELAY=1000

# ===== Monitoring Configuration =====
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# ===== Development/Debug (set to false in production) =====
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_CORS=true