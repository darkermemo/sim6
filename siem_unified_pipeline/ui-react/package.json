{
  "name": "ui-react",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview --port 5173",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:report": "playwright show-report",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint:ci": "eslint 'src/**/*.{ts,tsx}' --max-warnings=0",
    "typecheck": "tsc --noEmit --pretty false",
    "depcheck": "madge --extensions ts,tsx --circular src || (echo 'Circular deps found' && exit 2)",
    "test:unit": "vitest run --coverage.enabled --coverage.reporter=text-summary --coverage.all --coverage.threshold.lines=90 --coverage.threshold.branches=85",
    "test:a11y": "playwright test tests/a11y --project=chromium",
    "test:contracts": "tsx scripts/verify_api_contracts.ts",
    "test:e2e": "playwright test --project=chromium --project=firefox --project=webkit",
    "analyze": "vite-bundle-visualizer --analyze",
    "audit:components": "tsx scripts/audit_components.ts",
    "ui:summary": "tsx scripts/ui_summary.ts"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tanstack/react-query": "^5.17.0",
    "@tanstack/react-router": "^1.131.2",
    "@types/react-window": "^1.8.8",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.330.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.62.0",
    "react-router-dom": "^6.22.0",
    "react-window": "^1.8.11",
    "recharts": "^3.1.2",
    "tailwind-merge": "^2.2.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.0",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.6.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.56.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^16.3.0",
    "jsdom": "^24.0.0",
    "madge": "^6.1.0",
    "playwright": "^1.44.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.39.0",
    "vite": "^5.1.4",
    "vite-bundle-visualizer": "^1.2.1",
    "vitest": "^1.3.1",
    "zod": "^3.23.8"
  }
}
