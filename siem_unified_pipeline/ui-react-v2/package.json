{
  "name": "ui-react-v2",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "build:test": "VITE_API_URL=http://127.0.0.1:9999 VITE_HARD_FAIL_ON_SCHEMA=1 vite build",
    "build:v2": "VITE_VISUAL_THEME=v2 vite build",
    "preview": "vite preview --strictPort --port 5174 --host",
    "preview:test": "VITE_API_URL=http://127.0.0.1:9999 VITE_HARD_FAIL_ON_SCHEMA=1 vite preview --strictPort --port 5174 --host",
    "preview:v2": "VITE_VISUAL_THEME=v2 vite preview --strictPort --port 5174 --host",
    "dev": "vite --port 5174 --host",
    "dev:test": "VITE_API_URL=http://127.0.0.1:9999 VITE_HARD_FAIL_ON_SCHEMA=1 vite --port 5174 --host",
    "dev:v2": "VITE_VISUAL_THEME=v2 vite --port 5174 --host",
    "typecheck": "tsc -b",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "visual-guard": "node scripts/visual-guard.js",
    "e2e": "playwright test",
    "e2e:runtime": "playwright test tests/e2e/*.no-runtime.spec.ts",
    "e2e:report": "playwright show-report",
    "e2e:v2": "VITE_VISUAL_THEME=v2 playwright test",
    "test:golden": "npm run typecheck && npm run build:test && npm run e2e:runtime",
    "test:visual": "npm run visual-guard && npm run typecheck && npm run build:v2 && npm run e2e:v2",
    "test:unit": "jest",
    "test:unit:coverage": "jest --coverage",
    "test:unit:watch": "jest --watch",
    "test:e2e:no-runtime": "playwright test tests/e2e/enterprise-search.no-runtime.spec.ts",
    "test:e2e:performance": "playwright test tests/e2e/performance.spec.ts",
    "test:e2e:accessibility": "playwright test tests/e2e/accessibility.spec.ts",
    "test:regression": "npm run test:unit && npm run test:e2e:no-runtime && npm run test:e2e:performance && npm run test:e2e:accessibility",
    "test:all": "npm run typecheck && npm run lint && npm run test:regression && npm run test:visual",
    "test:enterprise": "npm run test:all && playwright test tests/e2e/enterprise-search.comprehensive.spec.ts"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.45.0",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-react": "^4.3.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "tsx": "^4.20.4",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.39.1",
    "vite": "^5.4.0"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.85.0",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/react-virtual": "^3.13.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "echarts": "^5.6.0",
    "echarts-for-react": "^3.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.23.1",
    "zod": "^4.0.17"
  }
}
